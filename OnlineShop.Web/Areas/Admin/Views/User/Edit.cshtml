@using OnlineShop.Model.ViewModel.User
@model UserViewModel

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>سفارشات</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="#">کاربران</a></li>
                        <li class="breadcrumb-item active">ویرایش کاربر</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="FullName"></label>
                                <input type="text" asp-for="FullName" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.FullName)">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="email" asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.Email)">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.Password)">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input type="text" asp-for="Address" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.Address)">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Order"></label>
                                <input type="text" asp-for="Order" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.Order)">
                                <span asp-validation-for="Order" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">ویرایش</button>
                            <button type="submit" class="btn btn-close">کنسل</button>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>